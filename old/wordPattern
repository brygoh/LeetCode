class Solution:
    def wordPattern(self, pattern: str, s: str) -> bool:
        words, emptyDict = s.split(' '), dict()
        
        if (len(words) != len(pattern)): return False
        if (len(set(pattern))) != len(set(words)): return False
        
        for i in range(len(words)):
            if words[i] not in emptyDict: 
                emptyDict[words[i]] = pattern[i]
            elif emptyDict[words[i]] != pattern[i]: 
                return False

        return True