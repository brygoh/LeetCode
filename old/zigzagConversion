class Solution:
    def convert(self, s: str, numRows: int) -> str:
        if numRows == 1: return s
        
        count = 0
        direction = 1
        rows = ["" for i in range(numRows)]
        
        for i in range(0, len(s)):
            rows[count] += s[i]
            if count == numRows - 1: direction = -1
            elif count == 0: direction = 1
            count += direction
            
        return "".join(rows)