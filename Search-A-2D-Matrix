class Solution:
    def searchMatrix(self, matrix: List[List[int]], target: int) -> bool:
        m = len(matrix)
        n = len(matrix[0])
        
        row = 0
        for i in range(m):
            if (target <= matrix[i][-1]):
                row = i
                break
        
        for i in range(n):
            if (target == matrix[row][i]):
                return True
        return False

        m = len(matrix)
        n = len(matrix[0])
        low, high = 0, m * n - 1
    
        while low <= high:
            mid = (low + high) // 2
            num = matrix[mid // n][mid % n]

            if num == target:
                return True
            elif num < target:
                low = mid + 1
            else:
                high = mid - 1
        
        return False
                